<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @your_students = @relationships.map do |r| %>
      <% r.student_id %>
    <% end %>
    <% @students.each do |student| %>
      <% if @your_students.include? student.id %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.grade %></td>
          <td><%= link_to 'Show', student %></td>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
          <td><%= link_to 'Add Parent', new_parent_path(student_id: student.id) %></td>
          <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

